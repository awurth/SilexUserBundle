{
    "name": "awurth/silex-user",
    "description": "A user provider for Silex",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexis Wurth",
            "email": "alexis.wurth57@gmail.com"
        }
    ],
    "require": {
        "doctrine/orm": "^2.3",
        "silex/silex": "^2.2",
        "symfony/doctrine-bridge": "^3.3",
        "symfony/form": "^3.3",
        "symfony/security": "^3.3",
        "symfony/twig-bridge": "^3.3",
        "symfony/validator": "^3.3"
    },
    "require-dev": {
        "dflydev/doctrine-orm-service-provider": "^2.0",
        "phpunit/phpunit": "^6.3",
        "swiftmailer/swiftmailer": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "AWurth\\SilexUser\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "suggest": {
        "swiftmailer/swiftmailer": "Use SwiftMailer for sending emails"
    }
}
